<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="itemDaoImpl" class="com.datascience.shop.dao.impl.ItemDaoImpl"/>

<bean id="itemService" class="com.datascience.shop.service.ItemService">
    <constructor-arg name="itemDao" ref="itemDaoImpl"/>
</bean>
</beans>